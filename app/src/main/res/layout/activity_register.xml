<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_marginBottom="20dp">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/logo" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Vendor Registration"
                android:textColor="@color/colorPrimary"
                android:textSize="24sp"
                android:textStyle="bold" />
        </LinearLayout>

        <TextView
            style="@style/SectionHeader"
            android:text="Account Details" />

        <com.google.android.material.card.MaterialCardView
            style="@style/FormCard">

            <LinearLayout style="@style/CardContentParams">

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/FormInputLayout"
                    android:hint="Full Name"
                    app:startIconDrawable="@android:drawable/ic_menu_myplaces">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etName"
                        android:inputType="textPersonName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/FormInputLayout"
                    android:hint="Email Address"
                    app:startIconDrawable="@android:drawable/ic_dialog_email">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etEmail"
                        android:inputType="textEmailAddress"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/FormInputLayout"
                    android:hint="Password"
                    app:passwordToggleEnabled="true"
                    app:startIconDrawable="@android:drawable/ic_lock_idle_lock">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etPassword"
                        android:inputType="textPassword"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/FormInputLayout"
                    android:hint="Confirm Password"
                    app:passwordToggleEnabled="true"
                    app:startIconDrawable="@android:drawable/ic_lock_idle_lock">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etConfirmPassword"
                        android:inputType="textPassword"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <TextView
            style="@style/SectionHeader"
            android:text="Firm Information" />

        <com.google.android.material.card.MaterialCardView
            style="@style/FormCard">

            <LinearLayout style="@style/CardContentParams">

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/FormInputLayout"
                    android:hint="Firm/Shop Name">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etFirmName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/FormInputLayout"
                    android:hint="GST Number">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etGstNumber"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="License Type"
                    android:layout_marginTop="8dp"
                    android:textColor="@color/gray_text"/>

                <Spinner
                    android:id="@+id/spLicenseType"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginTop="4dp"
                    android:background="@drawable/abc_edit_text_material"/>

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/FormInputLayout"
                    android:visibility="gone"
                    android:layout_marginTop="12dp"
                    android:hint="Fertilizer License No">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etFertilizerLicense"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/FormInputLayout"
                    android:visibility="gone"
                    android:hint="Seeds License No">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etSeedsLicense"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/FormInputLayout"
                    android:visibility="gone"
                    android:hint="Pesticides License No">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etPesticideLicense"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <TextView
            style="@style/SectionHeader"
            android:text="Contact Details" />

        <com.google.android.material.card.MaterialCardView
            style="@style/FormCard">

            <LinearLayout style="@style/CardContentParams">
                <com.google.android.material.textfield.TextInputLayout
                    style="@style/FormInputLayout"
                    android:hint="Phone Number"
                    app:startIconDrawable="@android:drawable/ic_menu_call">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etPhone"
                        android:inputType="phone"
                        android:maxLength="10"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/FormInputLayout"
                    android:hint="Alternate Phone Number"
                    app:startIconDrawable="@android:drawable/ic_menu_call">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etAlternatePhone"
                        android:inputType="phone"
                        android:maxLength="10"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/FormInputLayout"
                    android:hint="Nearest Transport Details For Indore">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etAddress"
                        android:inputType="textMultiLine"
                        android:minLines="2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <TextView
            style="@style/SectionHeader"
            android:text="Documents Upload" />

        <com.google.android.material.card.MaterialCardView
            style="@style/FormCard">

            <LinearLayout style="@style/CardContentParams">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="12dp">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnGstDoc"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Upload GST"
                        app:strokeColor="@color/colorPrimary"
                        android:textColor="@color/colorPrimary"/>

                    <TextView
                        android:id="@+id/tvGstStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:text="No file selected"
                        android:textSize="12sp"
                        android:textColor="@color/gray_text"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="12dp">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnLicenseDoc"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Upload License"
                        app:strokeColor="@color/colorPrimary"
                        android:textColor="@color/colorPrimary"/>

                    <TextView
                        android:id="@+id/tvLicenseStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:text="No file selected"
                        android:textSize="12sp"
                        android:textColor="@color/gray_text"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="12dp">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnAadharFront"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Aadhar Front"
                        app:strokeColor="@color/colorPrimary"
                        android:textColor="@color/colorPrimary"/>

                    <TextView
                        android:id="@+id/tvAadharFrontStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:text="No file selected"
                        android:textSize="12sp"
                        android:textColor="@color/gray_text"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="12dp">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnAadharBack"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Aadhar Back"
                        app:strokeColor="@color/colorPrimary"
                        android:textColor="@color/colorPrimary"/>

                    <TextView
                        android:id="@+id/tvAadharBackStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:text="No file selected"
                        android:textSize="12sp"
                        android:textColor="@color/gray_text"/>
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnRegisterVendor"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="24dp"
            android:text="COMPLETE REGISTRATION"
            android:textSize="16sp"
            android:textStyle="bold"
            app:cornerRadius="8dp"
            android:backgroundTint="@color/colorPrimary"/>

    </LinearLayout>
</ScrollView>